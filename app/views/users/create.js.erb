 var effect = "slide",
 options = { direction: "left"},
 duration = 500,
 $card = $( '#card' ),
 $card_error = $( '#card_error' ),
 $card_success = $( '#card_success' ),
 $card_success_para = $( '#card_success_para' );
 
 $card.parent().toggle('slide', {direction: 'left'}, 500);

<% if @api_response.code == 201 && @user.valid? %>
   $card_success_para.html("<%= escape_javascript(render partial: 'users/user', locals: { user: @user }) %>");
   $card_success.parent().toggle(effect, { direction: "right"}, duration);

 <% else %>
   $card_error.parent().toggle(effect, { direction: "right"}, duration);   
   

 <% end %>

   
   